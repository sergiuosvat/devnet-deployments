{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "network": {
            "type": "string",
            "enum": [
                "devnet",
                "testnet",
                "mainnet"
            ],
            "default": "devnet"
        },
        "mcpUrl": {
            "type": "string",
            "format": "uri",
            "default": "http://localhost:3000"
        },
        "relayerUrl": {
            "type": "string",
            "format": "uri"
        },
        "walletPath": {
            "type": "string",
            "description": "Path to the wallet.pem file"
        }
    },
    "required": [
        "walletPath"
    ]
}