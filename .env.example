# x402 Facilitator Environment Variables

# Network Configuration
NETWORK_PROVIDER=https://devnet-api.multiversx.com

# Server Configuration
PORT=3000
LOG_LEVEL=info

# Storage (SQLite)
STORAGE_TYPE=sqlite
SQLITE_DB_PATH=./facilitator.db

# Relayer Configuration (for gasless Relayed V3 transactions)
# Single PEM (legacy):
# RELAYER_PEM_PATH=./relayer.pem
# Multi-shard directory:
# RELAYER_WALLETS_DIR=./wallets/

# Cleanup interval for expired settlement records (ms)
CLEANUP_INTERVAL_MS=300000

# On-chain contract addresses (optional, for Architect /prepare endpoint)
IDENTITY_REGISTRY_ADDRESS=
VALIDATION_REGISTRY_ADDRESS=

# CORS origin (default: *)
CORS_ORIGIN=*

# Skip transaction simulation (for testing only)
# SKIP_SIMULATION=false
