{
    "name": "x402-facilitator",
    "version": "1.0.0",
    "type": "module",
    "description": "x402 Facilitator for MultiversX",
    "main": "dist/index.js",
    "scripts": {
        "start": "node dist/index.js",
        "dev": "tsx watch src/index.ts",
        "build": "tsc && mkdir -p dist/abis && cp -r src/abis/* dist/abis/",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest",
        "lint": "eslint src/**/*.ts"
    },
    "dependencies": {
        "@multiversx/sdk-core": "15.0.0",
        "@multiversx/sdk-network-providers": "2.9.3",
        "@multiversx/sdk-wallet": "^4.6.0",
        "better-sqlite3": "12.6.2",
        "cors": "^2.8.6",
        "dotenv": "16.4.5",
        "express": "^5.2.1",
        "express-rate-limit": "^8.2.1",
        "helmet": "^8.1.0",
        "pino": "9.0.0",
        "sqlite": "5.1.1",
        "sqlite3": "5.1.7",
        "zod": "3.23.8"
    },
    "devDependencies": {
        "@eslint/js": "9.39.2",
        "@types/better-sqlite3": "7.6.13",
        "@types/cors": "^2.8.19",
        "@types/express": "4.17.21",
        "@types/express-rate-limit": "^5.1.3",
        "@types/node": "20.12.12",
        "@types/sqlite3": "3.1.11",
        "@types/supertest": "6.0.2",
        "@typescript-eslint/eslint-plugin": "8.54.0",
        "@typescript-eslint/parser": "8.54.0",
        "@vitest/coverage-v8": "^1.6.0",
        "eslint": "9.3.0",
        "pino-pretty": "11.0.0",
        "supertest": "7.0.0",
        "tsx": "4.10.5",
        "typescript": "5.4.5",
        "typescript-eslint": "8.54.0",
        "vitest": "1.6.0"
    }
}
